{
  "info": {
    "name": "HelaBooking API",
    "_postman_id": "helabooking-collection",
    "description": "Collection for HelaBooking backend services (user, event, booking). Replace {{baseUrl}} with the service gateway or host.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User Service",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"alice\",\n  \"email\": \"alice@example.com\",\n  \"password\": \"P@ssw0rd\"\n}"
            },
            "url": { "raw": "{{userBaseUrl}}/api/users/register", "host": ["{{userBaseUrl}}"], "path": ["api","users","register"] }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"username\": \"alice\",\n  \"password\": \"P@ssw0rd\"\n}" },
            "url": { "raw": "{{userBaseUrl}}/api/users/login", "host": ["{{userBaseUrl}}"], "path": ["api","users","login"] }
          }
        },
        {
          "name": "Health",
          "request": {
            "method": "GET",
            "url": { "raw": "{{userBaseUrl}}/api/users/health", "host": ["{{userBaseUrl}}"], "path": ["api","users","health"] }
          }
        }
      ]
    },
    {
      "name": "Event Service",
      "item": [
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Concert\",\n  \"location\": \"Main Hall\",\n  \"eventDate\": \"2025-11-01T19:00:00\",\n  \"capacity\": 200\n}"
            },
            "url": { "raw": "{{eventBaseUrl}}/api/events", "host": ["{{eventBaseUrl}}"], "path": ["api","events"] }
          }
        },
        {
          "name": "Get Event by ID",
          "request": {
            "method": "GET",
            "url": { "raw": "{{eventBaseUrl}}/api/events/:id", "host": ["{{eventBaseUrl}}"], "path": ["api","events",":id"], "variable": [{ "key": "id", "value": "1" }] }
          }
        },
        {
          "name": "Get All Events",
          "request": {
            "method": "GET",
            "url": { "raw": "{{eventBaseUrl}}/api/events", "host": ["{{eventBaseUrl}}"], "path": ["api","events"] }
          }
        },
        {
          "name": "Update Event",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Concert Updated\",\n  \"location\": \"Main Hall\",\n  \"eventDate\": \"2025-11-01T20:00:00\",\n  \"capacity\": 220\n}" },
            "url": { "raw": "{{eventBaseUrl}}/api/events/:id", "host": ["{{eventBaseUrl}}"], "path": ["api","events",":id"], "variable": [{ "key": "id", "value": "1" }] }
          }
        },
        {
          "name": "Delete Event",
          "request": {
            "method": "DELETE",
            "url": { "raw": "{{eventBaseUrl}}/api/events/:id", "host": ["{{eventBaseUrl}}"], "path": ["api","events",":id"], "variable": [{ "key": "id", "value": "1" }] }
          }
        },
        {
          "name": "Reserve Seats",
          "request": {
            "method": "POST",
            "url": { "raw": "{{eventBaseUrl}}/api/events/:id/reserve?seats=2", "host": ["{{eventBaseUrl}}"], "path": ["api","events",":id","reserve"], "query": [{ "key": "seats", "value": "2" }], "variable": [{ "key": "id", "value": "1" }] }
          }
        },
        {
          "name": "Health",
          "request": {
            "method": "GET",
            "url": { "raw": "{{eventBaseUrl}}/api/events/health", "host": ["{{eventBaseUrl}}"], "path": ["api","events","health"] }
          }
        }
      ]
    },
    {
      "name": "Booking Service",
      "item": [
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"userId\": 1,\n  \"eventId\": 1,\n  \"numberOfTickets\": 2\n}" },
            "url": { "raw": "{{bookingBaseUrl}}/api/bookings", "host": ["{{bookingBaseUrl}}"], "path": ["api","bookings"] }
          }
        },
        {
          "name": "Get Booking by ID",
          "request": {
            "method": "GET",
            "url": { "raw": "{{bookingBaseUrl}}/api/bookings/:id", "host": ["{{bookingBaseUrl}}"], "path": ["api","bookings",":id"], "variable": [{ "key": "id", "value": "1" }] }
          }
        },
        {
          "name": "Get Bookings by User",
          "request": {
            "method": "GET",
            "url": { "raw": "{{bookingBaseUrl}}/api/bookings/user/:userId", "host": ["{{bookingBaseUrl}}"], "path": ["api","bookings","user",":userId"], "variable": [{ "key": "userId", "value": "1" }] }
          }
        },
        {
          "name": "Get All Bookings",
          "request": {
            "method": "GET",
            "url": { "raw": "{{bookingBaseUrl}}/api/bookings", "host": ["{{bookingBaseUrl}}"], "path": ["api","bookings"] }
          }
        },
        {
          "name": "Health",
          "request": {
            "method": "GET",
            "url": { "raw": "{{bookingBaseUrl}}/api/bookings/health", "host": ["{{bookingBaseUrl}}"], "path": ["api","bookings","health"] }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "userBaseUrl", "value": "http://localhost:8081", "type": "string" },
    { "key": "eventBaseUrl", "value": "http://localhost:8082", "type": "string" },
    { "key": "bookingBaseUrl", "value": "http://localhost:8083", "type": "string" }
  ]
}
